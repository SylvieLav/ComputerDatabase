<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	version="3.0">
	
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
	
	<servlet>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>com.computerDatabase.excilys.servlet.MainServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CreateComputerServlet</servlet-name>
		<servlet-class>com.computerDatabase.excilys.servlet.CreateComputerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateComputerServlet</servlet-name>
		<url-pattern>/addComputer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateComputerServlet</servlet-name>
		<servlet-class>com.computerDatabase.excilys.servlet.UpdateComputerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateComputerServlet</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>
</web-app>